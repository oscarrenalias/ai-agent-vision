{
  "configurations": [
    {
      "name": "Run server.py",
      "type": "debugpy",
      "request": "launch",
      "program": "server.py",
      "justMyCode": false,
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/backend"
    },
    {
      "name": "Run cli.py",
      "type": "debugpy",
      "request": "launch",
      "program": "cli.py",
      "justMyCode": false,
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/backend"
    },
    {
      "name": "Python Debugger: Current File with Arguments",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "justMyCode": false,
      "console": "integratedTerminal",
      "args": "${command:pickArgs}",
      "cwd": "${workspaceFolder}/backend"
    },
    {
      "type": "msedge",
      "request": "launch",
      "name": "Debug UI app",
      "url": "http://localhost:3000"
    }
  ]
}
